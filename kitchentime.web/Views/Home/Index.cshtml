@{
    ViewBag.Title = "Home Page";
}
<h2>Home/Index</h2>
<div class="row">
    <div class="col-lg-12">
        <div class="main-heading">
            <p>Upplev världen!</p>
            <div class="sub-heading">
                <p>FÖRVERKLIGA DINA DRÖMMAR MED XPERIA</p>
            </div>
        </div>

    </div>
</div>
<div class="row">
    <div class="photo-grid" data-bind="foreach: Products">
        <div class="col-lg-6">
            <figure>
                <img data-bind="attr: { src: ProductImage }" src="*" alt="Image" />
                <figcaption class="img-title">
                    <h5 data-bind="text: ProductDescription"></h5>
                </figcaption>
            </figure>
        </div>

    </div>

</div>
<div class="row">
    <br />
</div>

<div class="row">

    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">List of products</div>
        <div class="table-responsive">
            <table id="products1" class="table table-striped table-hover " data-bind="visible: Products().length > 0">
                <thead>
                    <tr>
                        <th>ProductName</th>
                        <th>ProductShortDescription</th>
                        <th>ProductDescription</th>
                        <th>ProductImage</th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: Products">
                    <tr>
                        <td data-bind="text: ProductName"></td>
                        <td data-bind="text: ProductShortDescription"></td>
                        <td data-bind="text: ProductDescription"></td>
                        <td data-bind="text: ProductImage"></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</div>


